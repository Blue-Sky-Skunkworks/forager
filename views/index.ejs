<!DOCTYPE html>
<html>
<head>
  <title id='forageTitle'>Glean 406</title>
    <%- include ./navbar.ejs %>
    
    <meta charset="utf-8" />


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Lora' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://secure-ds.serving-sys.com/BurstingcachedScripts/libraries/greensock/1_18_0/TweenMax.min.js"></script>
    
    <link rel="stylesheet" type="text/css" href="main.css">
</head>
<body>
  <div id="treeContainer">
      <div id="tree1"></div>
      <div id="tree2"></div>
      <div id="tree3"></div>
      <div id="tree4"></div> 
      <div id="tree5"></div>
      <div id="tree6"></div>
      <div id="tree7"></div>
      <div id="tree8"></div>
      <div id="tree9"></div>
      <div id="M2"></div>
  </div>
  <div id="line"></div>

  <script>
      TweenMax.staggerFrom(['#tree1','#tree2', '#tree3','#tree4','#tree5','#tree6','#tree7','#tree8','#tree9','#tree10'], 2, {opacity: 0, y: 90, ease: Power3.easeIn}, .2);
  </script>
  <script>
      TweenMax.staggerFrom(['#M2'], 2.5, { ease: Power1.easeInOut, opacity: 1, x: 700, delay: 1.5 }, .5);
  </script>     

  <div class="container">
    <div class="row row centered" id="mapRow">
      <div class="col-xs-6 col-centered" id="map"></div>
        <div class="col-xs-3 col-centered" id='catFilter'>
          <h4>Filter By Category</h4>
          <select class="form-control" id="categoryControl">
            <option>All</option>
            <option>Berries</option>
            <option>Apples</option>
            <option>Apricots</option>
            <option>Pears</option>
              <% if(user.local) { %>
                <option>My Posts</option>
              <% } %>
          </select>
        <div class="spacer50"></div>
        <div class="form-group row">
          <input type="text" class="form-control" placeholder="Search" id="searchText">
        </div>
          <input type="submit" class="btn btn-default" id="searchButton"></input>

          <% if(!user.local) { %>
            <div class="container" id="signuptextcontainer">
              <h3 id="signuptext">Sign up now to be able to post new Forage spots!</h3>
              <a id="signuptextbutton" class="btn btn-large btn-block btn-default" href="/signup" role="button">Register Now</a>
            </div>
          <% } %>
      
          <% if(user.local) { %>
            <div class="container" id="indexpost">
              <h3 id="indexPostTitle">Post a new forage location!</h3>
              <a id="indexPostButton" class="btn btn-large btn-block btn-default" href="/submitForage" role="button">New Post</a>
            </div>
          <% } %>
        </div>  
      </div>
    </div>
  </div>
</body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.7/react.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.7/react-dom.js"></script>
    <script src="https://code.jquery.com/jquery-2.2.0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBgbJrD_jtCPYZxXArPlJg68YYxFqEJ2QM
        &libraries=visualization&callback=initMap">
    </script>
    <script src="mapstyles.js"></script>
    <script src="map.js"> </script>
</html>